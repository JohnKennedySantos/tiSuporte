{% extends "base.html.twig" %}

{% block title %}Home - SUPORTE TI{% endblock %}

{% block header %}
    {% include "header.html.twig" %}
{% endblock %}

{% block content %}
    <section class="home-section">
        <h1>Bem-vindo à Home</h1>

        {% if usuario is defined %}
            <p>Olá, <strong>{{ usuario.nome }}</strong>! Você está na página inicial do sistema.</p>

            <form method="post" action="index.php?rota=logout">
                <button type="submit" class="btn">Sair</button>
            </form>
        {% else %}
            <p>Você não está logado.</p>
            <a href="index.php?rota=login" class="btn">Ir para o login</a>
        {% endif %}
    </section>
{% endblock %}
